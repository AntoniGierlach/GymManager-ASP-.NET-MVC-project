@page
@model GymManager.Areas.Identity.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Logowanie";
}

<div class="auth-container">
    <h2 class="auth-title">Zaloguj się</h2>
    <div class="auth-subtitle">Uzyskaj dostęp do swojego konta</div>

    <div asp-validation-summary="All" class="text-danger"></div>

    <form method="post">
        <div class="form-group">
            <label asp-for="Input.Email"></label>
            <input asp-for="Input.Email" class="form-control" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Input.Password"></label>
            <input asp-for="Input.Password" class="form-control" />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary full">
            <i class="fa-solid fa-right-to-bracket me-2"></i>Zaloguj
        </button>
    </form>

    <div class="auth-actions">
        <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-outline-light btn-sm">
            <i class="fa-solid fa-user-plus me-2"></i>Rejestracja
        </a>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}