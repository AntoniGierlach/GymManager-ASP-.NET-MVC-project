@page
@model GymManager.Areas.Identity.Pages.Account.LogoutModel
@{
    ViewData["Title"] = "Wylogowanie";
}

<div class="auth-container">
    <h2 class="auth-title">Wylogowanie</h2>
    <div class="auth-subtitle">Czy na pewno chcesz się wylogować?</div>

    <form method="post" class="auth-actions">
        <button type="submit" class="btn btn-primary">
            <i class="fa-solid fa-right-from-bracket me-2"></i>Wyloguj
        </button>
        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-light">
            <i class="fa-solid fa-house me-2"></i>Anuluj
        </a>
    </form>
</div>
