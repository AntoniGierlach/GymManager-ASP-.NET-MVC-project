@model IEnumerable<GymManager.Models.ApplicationUser>
@{
    ViewData["Title"] = "Użytkownicy";
}

<div class="page-header">
    <h2 class="page-title"><i class="fa-solid fa-user-gear"></i> Użytkownicy</h2>
</div>


@if (!Model.Any())
{
    <div class="empty-state">
        <div class="icon"><i class="fa-solid fa-user-gear"></i></div>
        <h3>Brak użytkowników</h3>
        <p>Nie znaleziono żadnych kont w systemie.</p>
    </div>
}
else
{
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead>
                        <tr>
                            <th>Imię i nazwisko</th>
                            <th>Email</th>
                            <th>Telefon</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var u in Model)
                        {
                            <tr>
                                <td class="fw-semibold">@u.FirstName @u.LastName</td>
                                <td>@u.Email</td>
                                <td>@u.PhoneNumber</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}