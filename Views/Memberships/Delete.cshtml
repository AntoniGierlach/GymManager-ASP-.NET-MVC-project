@model GymManager.Models.Membership
@{
    ViewData["Title"] = "Usuń karnet";
}

<div class="page-header">
    <h2 class="page-title"><i class="fa-solid fa-trash"></i> Usuń karnet</h2>
    <a class="btn btn-outline-light" asp-action="Index">
        <i class="fa-solid fa-arrow-left me-2"></i>Wróć
    </a>
</div>

<div class="card">
    <div class="card-body">
        <div class="alert alert-danger">
            Na pewno chcesz usunąć karnet <strong>@Model.Name</strong>?
        </div>

        <dl class="row">
            <dt class="col-sm-4 text-light-emphasis">Cena</dt>
            <dd class="col-sm-8">@Model.Price.ToString("0.00") zł</dd>
            <dt class="col-sm-4 text-light-emphasis">Czas trwania</dt>
            <dd class="col-sm-8">@Model.DurationInDays dni</dd>
        </dl>

        <form asp-action="Delete" method="post" class="d-flex justify-content-end gap-2">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger px-4">
                <i class="fa-solid fa-trash me-2"></i>Usuń
            </button>
            <a class="btn btn-outline-light px-4" asp-action="Index">Anuluj</a>
        </form>
    </div>
</div>
