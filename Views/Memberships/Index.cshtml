@model IEnumerable<GymManager.Models.Membership>
@{
    ViewData["Title"] = "Karnety";
}

<div class="page-header">
    <h2 class="page-title">
        <i class="fa-solid fa-ticket"></i> Karnety
    </h2>
    @if (User.IsInRole("Admin"))
    {
        <a class="btn btn-primary" asp-action="Create">
            <i class="fa-solid fa-plus me-2"></i>Dodaj karnet
        </a>
    }
</div>

@if (!Model.Any())
{
    <div class="empty-state">
        <div class="icon"><i class="fa-solid fa-ticket"></i></div>
        <h3>Brak karnetów</h3>
        <p>Dodaj pierwszy karnet, aby użytkownicy mogli go kupić.</p>
        @if (User.IsInRole("Admin"))
        {
            <div class="mt-3">
                <a class="btn btn-primary" asp-action="Create">
                    <i class="fa-solid fa-plus me-2"></i>Dodaj karnet
                </a>
            </div>
        }
    </div>
}
else
{
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead>
                        <tr>
                            <th>Nazwa</th>
                            <th>Cena</th>
                            <th>Czas</th>
                            <th>Obowiązuje w</th>
                            <th class="text-end">Akcje</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var m in Model)
                        {
                            <tr>
                                <td class="fw-semibold">@m.Name</td>
                                <td>@m.Price.ToString("0.00") zł</td>
                                <td>@m.DurationInDays dni</td>
                                <td>
                                    @if (m.IsOpenAll)
                                    {
                                        <span class="badge text-bg-success">
                                            <i class="fa-solid fa-earth-europe me-1"></i>Wszystkie oddziały (OPEN)
                                        </span>
                                    }
                                    else
                                    {
                                        var clubs = m.MembershipClubs?
                                        .Select(x => x.Club?.Name)
                                        .OfType<string>()
                                        .Where(n =>
                                        !string.IsNullOrWhiteSpace(n)).ToList()
                                        ?? new List<string>();

                                        if (clubs.Count == 0)
                                        {
                                            <span class="badge text-bg-warning">
                                                <i class="fa-solid fa-triangle-exclamation me-1"></i>Brak przypisanych oddziałów
                                            </span>
                                        }
                                        else
                                        {
                                            foreach (var clubName in clubs)
                                            {
                                                <span class="badge text-bg-secondary me-1 mb-1">
                                                    <i class="fa-solid fa-location-dot me-1"></i>@clubName
                                                </span>
                                            }
                                        }
                                    }
                                </td>
                                <td class="text-end">
                                    <a class="btn btn-outline-light btn-sm" asp-action="Details" asp-route-id="@m.Id"
                                        title="Szczegóły">
                                        <i class="fa-solid fa-circle-info"></i>
                                    </a>

                                    @if (User.IsInRole("Admin"))
                                    {
                                        <a class="btn btn-outline-warning btn-sm" asp-action="Edit" asp-route-id="@m.Id"
                                            title="Edytuj">
                                            <i class="fa-solid fa-pen"></i>
                                        </a>
                                        <a class="btn btn-outline-danger btn-sm" asp-action="Delete" asp-route-id="@m.Id"
                                            title="Usuń">
                                            <i class="fa-solid fa-trash"></i>
                                        </a>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}