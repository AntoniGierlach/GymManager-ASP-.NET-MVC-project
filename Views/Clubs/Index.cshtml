@model IEnumerable<GymManager.Models.Club>
@{
    ViewData["Title"] = "Oddziały";
}

<div class="page-header">
    <h2 class="page-title"><i class="fa-solid fa-location-dot"></i> Oddziały</h2>
    <a class="btn btn-primary" asp-action="Create">
        <i class="fa-solid fa-plus me-2"></i>Dodaj oddział
    </a>
</div>

@if (!Model.Any())
{
    <div class="empty-state">
        <div class="icon"><i class="fa-solid fa-location-dot"></i></div>
        <h3>Brak oddziałów</h3>
        <p>Dodaj pierwszy oddział siłowni.</p>
        <div class="mt-3">
            <a class="btn btn-primary" asp-action="Create">
                <i class="fa-solid fa-plus me-2"></i>Dodaj oddział
            </a>
        </div>
    </div>
}
else
{
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead>
                        <tr>
                            <th>Nazwa</th>
                            <th>Adres</th>
                            <th>Telefon</th>
                            <th>Email</th>
                            <th class="text-end">Akcje</th>
                        </tr>
                    </thead>
                    <tbody>
                    @foreach (var c in Model)
                    {
                        <tr>
                            <td class="fw-semibold">@c.Name</td>
                            <td>@c.Address</td>
                            <td>@c.ContactPhone</td>
                            <td>@c.ContactEmail</td>
                            <td class="text-end">
                                <a class="btn btn-outline-light btn-sm" asp-action="Details" asp-route-id="@c.Id">
                                    <i class="fa-solid fa-circle-info"></i>
                                </a>
                                <a class="btn btn-outline-warning btn-sm" asp-action="Edit" asp-route-id="@c.Id">
                                    <i class="fa-solid fa-pen"></i>
                                </a>
                                <a class="btn btn-outline-danger btn-sm" asp-action="Delete" asp-route-id="@c.Id">
                                    <i class="fa-solid fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
