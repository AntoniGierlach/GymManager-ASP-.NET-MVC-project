@model IEnumerable<GymManager.Models.Enrollment>
@{
    ViewData["Title"] = "Moje karnety";
}

<div class="page-header">
    <h2 class="page-title"><i class="fa-solid fa-id-card"></i> Moje karnety</h2>
    <a class="btn btn-outline-light" asp-controller="Shop" asp-action="Index">
        <i class="fa-solid fa-cart-shopping me-2"></i>Kup karnet
    </a>
</div>

@if (!Model.Any())
{
    <div class="empty-state">
        <div class="icon"><i class="fa-solid fa-id-card"></i></div>
        <h3>Nie masz jeszcze karnetów</h3>
        <p>Przejdź do sklepu i kup swój pierwszy karnet.</p>
        <div class="mt-3">
            <a class="btn btn-primary" asp-controller="Shop" asp-action="Index">
                <i class="fa-solid fa-plus me-2"></i>Kup karnet
            </a>
        </div>
    </div>
}
else
{
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead>
                        <tr>
                            <th>Karnet</th>
                            <th>Cena</th>
                            <th>Czas</th>
                            <th>Kupiono</th>
                            <th>Ważny do</th>
                            <th class="text-end">Status</th>
                        </tr>
                    </thead>
                    <tbody>
                    @foreach (var e in Model)
                    {
                        var purchasedLocal = e.PurchasedAt.ToLocalTime();
                        var expires = purchasedLocal.AddDays(e.Membership?.DurationInDays ?? 0);
                        var isActive = DateTime.Now <= expires;

                        <tr>
                            <td class="fw-semibold">@e.Membership?.Name</td>
                            <td>@(e.Membership?.Price.ToString("0.00") ?? "—") zł</td>
                            <td>@(e.Membership?.DurationInDays.ToString() ?? "—") dni</td>
                            <td>@purchasedLocal.ToString("yyyy-MM-dd HH:mm")</td>
                            <td>@expires.ToString("yyyy-MM-dd")</td>
                            <td class="text-end">
                                @if (isActive)
                                {
                                    <span class="badge text-bg-success">
                                        <i class="fa-solid fa-circle-check me-1"></i>Aktywny
                                    </span>
                                }
                                else
                                {
                                    <span class="badge text-bg-secondary">
                                        <i class="fa-solid fa-clock me-1"></i>Wygasł
                                    </span>
                                }
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
