@model IEnumerable<GymManager.Models.Enrollment>
@{
    ViewData["Title"] = "Moje karnety";
}

<div class="page-header">
    <h2 class="page-title"><i class="fa-solid fa-id-card"></i> Moje karnety</h2>
    <a class="btn btn-outline-light" asp-controller="Shop" asp-action="Index">
        <i class="fa-solid fa-cart-shopping me-2"></i>Kup karnet
    </a>
</div>

@if (!Model.Any())
{
    <div class="empty-state">
        <div class="icon"><i class="fa-solid fa-id-card"></i></div>
        <h3>Nie masz jeszcze karnetów</h3>
        <p>Przejdź do sklepu i kup swój pierwszy karnet.</p>
        <div class="mt-3">
            <a class="btn btn-primary" asp-controller="Shop" asp-action="Index">
                <i class="fa-solid fa-plus me-2"></i>Kup karnet
            </a>
        </div>
    </div>
}
else
{
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead>
                        <tr>
                            <th>Karnet</th>
                            <th>Cena</th>
                            <th>Czas</th>
                            <th>Obowiązuje w</th>
                            <th>Kupiono</th>
                            <th>Ważny do</th>
                            <th class="text-end">Status</th>
                        </tr>
                    </thead>
                    <tbody>
                    @foreach (var e in Model)
                    {
                        var m = e.Membership;
                        var purchasedLocal = e.PurchasedAt.ToLocalTime();
                        var expires = purchasedLocal.AddDays(m?.DurationInDays ?? 0);
                        var isActive = DateTime.Now <= expires;

                        <tr>
                            <td class="fw-semibold">@m?.Name</td>
                            <td>@(m?.Price.ToString("0.00") ?? "—") zł</td>
                            <td>@(m?.DurationInDays.ToString() ?? "—") dni</td>

                            <td>
                                @if (m?.IsOpenAll == true)
                                {
                                    <span class="badge text-bg-success">
                                        <i class="fa-solid fa-earth-europe me-1"></i>Wszystkie oddziały (OPEN)
                                    </span>
                                }
                                else
                                {
                                    var clubs = m?.MembershipClubs?
                                        .Select(x => x.Club?.Name)
                                        .OfType<string>()
                                        .Where(n => !string.IsNullOrWhiteSpace(n))
                                        .ToList() ?? new List<string>();

                                    if (clubs.Count == 0)
                                    {
                                        <span class="badge text-bg-warning">
                                            <i class="fa-solid fa-triangle-exclamation me-1"></i>Brak przypisanych oddziałów
                                        </span>
                                    }
                                    else
                                    {
                                        foreach (var clubName in clubs)
                                        {
                                            <span class="badge text-bg-secondary me-1 mb-1">
                                                <i class="fa-solid fa-location-dot me-1"></i>@clubName
                                            </span>
                                        }
                                    }
                                }
                            </td>

                            <td>@purchasedLocal.ToString("yyyy-MM-dd HH:mm")</td>
                            <td>@expires.ToString("yyyy-MM-dd")</td>
                            <td class="text-end">
                                @if (isActive)
                                {
                                    <span class="badge text-bg-success">
                                        <i class="fa-solid fa-circle-check me-1"></i>Aktywny
                                    </span>
                                }
                                else
                                {
                                    <span class="badge text-bg-secondary">
                                        <i class="fa-solid fa-clock me-1"></i>Wygasł
                                    </span>
                                }
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
