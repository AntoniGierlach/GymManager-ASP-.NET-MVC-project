@model IEnumerable<GymManager.Models.Enrollment>
@{
    ViewData["Title"] = "Zakupy karnetów";
}

<div class="page-header">
    <h2 class="page-title"><i class="fa-solid fa-users"></i> Zakupy karnetów</h2>
</div>


@if (!Model.Any())
{
    <div class="empty-state">
        <div class="icon"><i class="fa-solid fa-users"></i></div>
        <h3>Brak zakupów</h3>
        <p>Nikt jeszcze nie kupił żadnego karnetu.</p>
    </div>
}
else
{
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead>
                        <tr>
                            <th>Użytkownik</th>
                            <th>Email</th>
                            <th>Karnet</th>
                            <th>Data</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var e in Model)
                        {
                            <tr>
                                <td class="fw-semibold">@e.User?.FirstName @e.User?.LastName</td>
                                <td>@e.User?.Email</td>
                                <td>@e.Membership?.Name</td>
                                <td>@e.PurchasedAt.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}